        </dependency>

        <!-- CustomStructures -->
        <dependency>
            <groupId>com.github.ryandw11</groupId>
            <artifactId>CustomStructures</artifactId>
            <version>1.5</version>
            <systemPath>${project.basedir}/lib/CustomStructures-1.7.0.jar</systemPath>
            <scope>system</scope>
            
        </dependency>
        
        <!-- Oh the dungeons you all go -->
        <dependency>
            <groupId>OhTheDungeon</groupId>
            <artifactId>ohthedungeon</artifactId>
            <version>2.0.27</version>
            <scope>system</scope>
